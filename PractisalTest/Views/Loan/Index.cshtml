@model List<LoanGetDto>
<!DOCTYPE html>
<html>
<head>
    <title>Page Title</title>
</head>
<body>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Client Id</th>
                <th scope="col">Client</th>
                <th scope="col">Loan Amount</th>
                <th scope="col">Payout Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th>@item.ClientId</th>
                <td>@item.Client.Name  @item.Client.Surname</td>
                <td>@item.Amount</td>
                <td>@item.PayoutDate.ToString("dd/mm/yyyy")</td>
            </tr>
            }

        </tbody>
    </table>

    <a asp-controller="Loan" asp-action="AddLoan">Add new Loan</a>
</body>
</html>